= render :partial => 'spree/admin/shared/configuration_menu'
%h1 t('posts')
.new-post= button_link_to t('post.create'), new_object_url, :icon => 'add', :id => 'admin_new_post_link'

%table.index#listing_posts
  %thead
    %th t('post.title')
    %th t('post.subtitle')
    %th t('post.published_at')
    %th
    %th
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.title, object_url(post)
        %td= post.subtitle.html_safe
        %td= post.published_at
        %td= link_to_edit post
        %td= link_to_delete post

